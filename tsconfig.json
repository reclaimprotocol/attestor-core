{
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "outDir": "lib",
    "strict": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
